{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",       
    "moduleResolution": "bundler",     
    "outDir": "./dist",
    "types": ["node"],
    "target": "ES2022"                
  },
  "include": [
    "src/main/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "src/renderer/**/*",
    "node_modules"
  ]
}