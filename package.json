{
  "name": "devtoys-clone",
  "version": "1.0.0",
  "description": "A DevToys clone built with Electron.js and React",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "tsc && vite build && electron-builder",
    "start": "electron .",
    "watch": "concurrently -k \"vite\" \"electron .\"",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --fix"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "fast-xml-parser": "^4.2.7",
    "jimp": "^0.22.10",
    "marked": "^7.0.2",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "uuid": "^9.0.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.1.2",
    "electron-builder": "^24.9.1",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.11.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.example.devtoys",
    "productName": "DevToys Clone",
    "copyright": "Copyright Â© 2023",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "!dist/electron/**"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "src/renderer/assets/icons/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/renderer/assets/icons/icon.icns",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "src/renderer/assets/icons/icon.png",
      "category": "Development",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
